gris_oscuro = #444
gris_claro =invert(gris_oscuro)
header
	background gris_oscuro
	padding 0.5em
	.logo
		figure
			border 1px dashed invert(gris_oscuro)
			height 52px
			width 52px
	h1
		color white
		font-size 18px
		margin 0
		padding 0

	.usuario
		.avatar
			border 1px dashed gris_claro
			border-radius 50%
			height 50px
			width 50px

section
	padding 1.5em
	article
		border 1px solid gris_claro
		border-bottom-left-radius 2em
		border-bottom-right-radius 2em
		overflow hidden
		margin-bottom 0.5em
	figure
		background-color gris_claro
		height 160px
		width 120px
	h2
		font-size 18px
		color gris_oscuro

	.acciones
		border-top 3px solid gris_oscuro
		padding 0.8em
		
		.datos
			position relative
			right 2em
